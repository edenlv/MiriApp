										<blocks>
											<m:VBox>
												<m:Label design="Bold" class="fontSize18"
													text="Main differences between Web 1.0/2.0/3.0" />

												<Table xmlns="sap.m" alternateRowColors="true">
													<columns>
														<Column width="1rem">
															<Label text="" />
														</Column>
														<Column>
															<Label design="Bold" text="Web 1.0" />
														</Column>
														<Column>
															<Label design="Bold" text="Web 2.0" />
														</Column>
														<Column>
															<Label design="Bold" text="Web 3.0" />
														</Column>
													</columns>
													<items>

														<ColumnListItem>
															<cells>
																<Text text="2" />
																<Text
																	text="Web 1.0 was all about static content, one way publishing of content without any real interaction between readers or publishers or each other." />
																<Text
																	text=" Web 2.0 is more about 2 way communication through social networking, blogging, wikis, tagging, user generated content and video." />
																<Text
																	text="Web 3.0 is curiusly undefined. AI and the web learning what you want and delivering you a Personalized web experience." />
															</cells>
														</ColumnListItem>
														<ColumnListItem>
															<cells>
																<Text text="3" />
																<Text text="The Hypertext/CGI Web. (the basic)" />
																<Text text="The Community Web (for people: apps/sites)" />
																<Text text="The Semantic Web (for machines)" />
															</cells>
														</ColumnListItem>
														<ColumnListItem>
															<cells>
																<Text text="1" />
																<Text text="Millions of users" />
																<Text text="Billions of users" />
																<Text text="Trillions of users" />
															</cells>
														</ColumnListItem>
													</items>
												</Table>
												<m:Label text="Use-Case: User interacts with the WWW" class="sapUiMediumMarginTop underline"/>
												<m:Text
													text="\nIn web 1.0, a user would consume content published by a company.
													\n\nIn web 2.0, a user would publish content that other users can consume, 
													and companies publish platforms for that use. 
													\n\nIn web 3.0, a user would interact with AI applications 
													to consume and publish services."
													class="sapUiTinyMarginBegin sapUiTinyMarginTop" />
											</m:VBox>
										</blocks>
